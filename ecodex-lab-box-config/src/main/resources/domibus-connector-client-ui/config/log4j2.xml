<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitor="10" >

	<Properties>

		<Property name="basePath">logs</Property>

		<Property name="PID">????</Property>
		<!-- <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property> -->
        <Property name="LOG_EXCEPTION_CONVERSION_WORD_COLOR">%xEx{full}{ansi}</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xEx{full}</Property>

		<Property name="LOG_LEVEL_PATTERN">%5p</Property>
		<Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
		<Property name="CONN_CONSOLE_LOG_PATTERN">%style{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %highlight{${LOG_LEVEL_PATTERN}} %style{${sys:PID}}{magenta} %clr{---}{faint}  %style{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD_COLOR}</Property>
		<Property name="DEBUG_CONN_FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- %40.-40location--- [tid=%64.-64X{messageid}] [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="NORMAL_CONN_FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %highlight{${LOG_LEVEL_PATTERN}} %style{${sys:PID}}{magenta} %clr{---}{faint}  %style{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
		<Property name="CONN_FILE_LOG_PATTERN">${NORMAL_CONN_FILE_LOG_PATTERN}</Property>
	</Properties>

    <Appenders>
		
		
		<RollingFile name="File" fileName="${basePath}/connectorClientUI.log" filePattern="${basePath}/connectorClientUI-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${sys:CONN_CONSOLE_LOG_PATTERN}" />
            <Policies>
				<SizeBasedTriggeringPolicy size="10M" />
            </Policies>
        </RollingFile>
	
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] [msgid=%X{messageid}] %-5level %logger{36} - %msg%n" /> -->
            <PatternLayout pattern="${sys:CONN_FILE_LOG_PATTERN}" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="Console" />		
			<AppenderRef ref="File" />			
        </Root>

        <Logger name="eu.domibus.connector.client" level="INFO" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>

	
        	
    </Loggers>
</Configuration>
