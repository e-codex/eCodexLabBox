<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>labbox</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
        <fileSet>
            <includes>
                <include>pom.xml</include>
            </includes>
            <directory>${project.basedir}/../ecodex-lab-box/</directory>
            <outputDirectory>lab-box</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
            <directory>${project.basedir}/src/main/mavenwrapper</directory>
            <outputDirectory>lab-box</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <directory>${project.basedir}/src/main/mavenwrapper</directory>
            <outputDirectory>lab-box</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>*.txt</include>
            </includes>
            <fileMode>0755</fileMode>
            <directory>${project.basedir}/src/main/readme</directory>
            <outputDirectory>lab-box</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>